!!!
%html
  %head
    %meta{:charset => 'utf-8'}/
    %meta{:content => 'noindex', :name => 'robots'}/
    %meta{:content => 'initial-scale=1', :name => 'viewport'}/
    %title= title
    = stylesheet_link_tag :application, media: 'all'
    = stylesheet_link_tag 'https://fonts.googleapis.com/css?family=Lato:400,900,700'
    = csrf_meta_tags
  %body{:class => body_class}
    = render 'header'
    = render 'flashes'
    .content
      .container
        = yield
    %br
    %br
    = render 'footer'
    = render 'javascript'
