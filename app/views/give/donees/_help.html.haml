- if project
  .help{class: "color0"}
    .container
      %h2= "How #{'else ' unless current_page?(donee_path(donee))}can you help #{donee.first_name}?"
      - unless params[:controller] == 'give/donees/pledges'
        %a.btn-primary.btn-lg{href: new_donee_pledge_path(donee)}
          = fa_icon 'angle-right'
          By Donating
      - unless current_page?(donee_subscriptions_path(donee))
        %a.btn-primary.btn-lg{href: donee_subscriptions_path(donee)}
          = fa_icon 'angle-right'
          By Praying
      - unless current_page?(about_donee_path(donee))
        %a.btn-primary.btn-lg{href: about_donee_path(donee)}
          = fa_icon 'angle-right'
          More Info
      - unless current_page?(donee_path(donee))
        %a.btn-primary.btn-lg{href: donee_path(donee)}
          = fa_icon 'angle-right'
          See Profile
- if me?(donee)
  .authenticate.indigo
    .container
      %h2
        Your Personalised MPD Site
      %p
        Track your MPD progress as you journey towards your Summer Project.
      %a.btn-primary.btn-lg.btn-light{href: root_url}
        = fa_icon 'angle-right'
        Go To My MPD Site
